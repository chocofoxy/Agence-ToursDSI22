{% extends 'layout.html.twig' %}
{% block title %}Circuit index{% endblock %}
{% block main %}
{{ form_start(form) }}
<div class="bg-white rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.js" defer></script>
<div class="container max-w-full mx-auto py-12 px-6">
  <div class="font-sans">
  <div class="max-w-sm mx-auto px-6">
    <div class="relative flex flex-wrap">
      <div class="w-full relative">
        <div class="mt-6">
           <div class="mb-5 pb-1border-b-2 text-center font-base text-gray-700">
          </div>
          <div class="text-center font-semibold text-black">
            Cr√©er un compte dans notre website 
          </div>
          <div class="mt-8">
            <div class="mx-auto max-w-lg">
              <div class="py-2">
                <span class="px-1 text-sm text-blue-500"> {{ form_label(form.email) }} </span>
                    {{ form_widget(form.email , { 'attr' : { 'class' : "text-md block px-3 py-2  rounded-lg w-full 
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none"}}) }}
              </div>
              <div class="py-2">
                <span class="px-1 text-sm text-blue-500"> {{ form_label(form.password) }} </span>
                    {{ form_widget(form.password , { 'attr' : { 'class' : "text-md block px-3 py-2  rounded-lg w-full 
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none"}}) }}
              </div>
              </div>
              <div class="flex justify-between"><button class="mt-3 text-lg font-semibold 
                bg-blue-500 w-full text-white rounded-lg
                px-6 py-3 block shadow-xl hover:text-white hover:bg-blue-700" type="submit">
                {{ button_label|default('Register') }}
              </button>
            </div>
          </div>
            {{ form_row(form._token) }}
        </div>
      </div>
    </div>
  </div>
</div>
</div> 
</div>
{{ form_end(form) }}
{% endblock %}
