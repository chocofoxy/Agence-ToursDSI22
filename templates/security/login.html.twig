{% extends 'layout.html.twig' %}
{% block title %}Circuit index{% endblock %}
{% block main %}
<div class="bg-white rounded px-8 pt-6 pb-8 mb-4 flex flex-col">
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.js" defer></script>
<div class="container max-w-full mx-auto py-12 px-6">
  <div class="font-sans">
  <div class="max-w-sm mx-auto px-6">
    <div class="relative flex flex-wrap">
      <div class="w-full relative">
        <div class="mt-6">
           <div class="mb-5 pb-1border-b-2 text-center font-base text-gray-700">
          </div>
          <div class="text-center font-semibold text-black">
            Connecter a notre site web
          </div>
          <form class="mt-8" method="post">
            {% if error %}
                    <div class="semi-bold text-red-500">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="mb-3">
                     You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                 </div>
             {% else %}
            <div class="mx-auto max-w-lg">
              <div class="py-2">
                <span class="px-1 text-sm text-blue-500">  email </span>
                   <input type="email" value="{{ last_username }}" name="email" id="inputEmail" required autofocus class="text-md block px-3 py-2 form-control rounded-lg w-full 
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none" />
              </div>
              <div class="py-2">
                <span class="px-1 text-sm text-blue-500"> password </span>
                    <input  type="password" name="password" id="inputPassword" class="form-control text-md block px-3 py-2  rounded-lg w-full 
                bg-white border-2 border-gray-300 placeholder-gray-600 shadow-md focus:placeholder-gray-500 focus:bg-white focus:border-gray-600 focus:outline-none"/>
              </div>

              </div>
              <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}" />
              <div class="flex justify-between"><button class="mt-3 text-lg font-semibold 
                bg-blue-500 w-full text-white rounded-lg
                px-6 py-3 block shadow-xl hover:text-white hover:bg-blue-700" type="submit"> Login
              </button>
            </div>
            {% endif %}
          </form>
            
        </form>
      </div>
    </div>
  </div>
</div>
</div> 
</div>
{% endblock %}

