      <div class="bg-gray-800 text-white rounded p-2 my-2">
        composer require symfony/maker-bundle --dev
      </div>
      <div class="bg-gray-800 text-white rounded p-2 my-2">
        composer require symfony/maker-bundle --dev <br>
        <span class="text-gray-500 text-sm"> // pour lister l'utilisation de MakerBundle </span> <br/>
        php bin/console list make
